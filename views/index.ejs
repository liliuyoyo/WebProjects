<% include ./partials/header.ejs %>

<div class="ui main center container">
    <div class="ui huge header">= My Blogs =</div>
    <div class="ui top atteched segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image%>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%= blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui teal basic button readmore" href="/blogs/<%= blog._id%>">Read More</i></a>
                        </div>
                    </div>
                </div>
            <% })%>    
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>